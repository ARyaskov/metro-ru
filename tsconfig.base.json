{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2016", "dom"],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "removeComments": true,
    "baseUrl": "./",
    "incremental": false,
    "declaration": true,
    "sourceMap": false
  },
  "exclude": ["node_modules", "dist", "src/test.ts"]
}
